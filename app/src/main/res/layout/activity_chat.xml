<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.technisupport.chat4saggic.ChatActivity"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/root_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar_frame">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:id="@+id/toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/toolbar"
            android:layout_alignBottom="@+id/toolbar"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:id="@+id/search_bar"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:visibility="gone">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/close_search_button"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"/>
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textColor="#FFFFFF"
                app:backgroundTint="@android:color/white"
                android:id="@+id/search_edit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/occurences_text"
                android:layout_gravity="center" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/previous_search_button"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_previous"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/next_search_button"
                android:layout_marginEnd="15dp"/>
        </LinearLayout>
    </RelativeLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/messages_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/message_area"
        android:layout_below="@+id/toolbar_frame"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_area"
        android:layout_alignParentBottom="true"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/textarea_background"
            android:layout_toStartOf="@+id/send_button"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/text_area">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_margin="1dp"
                android:id="@+id/emoji_button"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_emoticon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/emoji_keyboard_button"
                />
            <com.vanniktech.emoji.EmojiEditText
                android:id="@+id/edit_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="8"
                android:scrollbars="vertical"
                android:background="@android:color/transparent"
                 />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/more_button"
                android:src="@drawable/ic_add"
                android:layout_gravity="bottom"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:layout_margin="1dp"
                android:contentDescription="@string/emoji_keyboard_button"
                />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:fabSize="mini"
            android:id="@+id/send_button"
            android:src="@drawable/ic_send"
            android:layout_alignParentEnd="true"
            app:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/text_area"
            />

    </RelativeLayout>

</RelativeLayout>
